                  </div>                </div>                {% if blog.moderated? %}
                  <p><small>{{ 'blogs.comments.moderated' | t }}</small></p>
                {% endif %}                <input type="submit" class="btn" value="{{ 'blogs.comments.post' | t }}">              {% endform %}            </div>        {% endif %}      </div>
